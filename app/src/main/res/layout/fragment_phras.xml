<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletList.PhrasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AddressLt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeErrorColor="@color/darkest_red"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintTextColor="@color/dark_green"
            app:endIconMode="clear_text"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/dark_green"
            android:layout_marginTop="10dp"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:textCursorDrawable="@drawable/custom_cursur_style"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PhraseLt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeErrorColor="@color/darkest_red"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintTextColor="@color/dark_green"
            app:endIconMode="clear_text"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/dark_green"
            android:layout_marginTop="10dp"
            android:hint="Phrase">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:textCursorDrawable="@drawable/custom_cursur_style"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Typically 12 (sometimes 24) words separated by sing space"
            android:textSize="16sp"
            android:textColor="@color/dark_silver"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:padding="12dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:text="What is Recovery Phrase?"
        android:textColor="@color/dark_green"/>


</RelativeLayout>