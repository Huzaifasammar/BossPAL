<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainFragments.WalletFinanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staking"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:id="@+id/staking_more"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <include layout="@layout/sample_staking_item"
                android:layout_below="@id/staking_more"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DeFi Tokens"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textAllCaps="true"
                android:id="@+id/deFi_more"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@color/green"/>

            <include layout="@layout/sample_defi_token_item"
                android:layout_below="@id/deFi_more"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lending / Borrowing"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textAllCaps="true"
                android:id="@+id/landing_more"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@color/green"/>

            <include layout="@layout/sample_defi_token_item"
                android:layout_below="@id/landing_more"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>